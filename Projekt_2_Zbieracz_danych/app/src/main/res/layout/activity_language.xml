<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yggdrasil.peoplephotos.LanguageActivity"
    android:background="@color/colorBackground">

    <TextView
        android:text="@string/textView_chooseLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChooseLang"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonPL"
        android:layout_marginTop="34dp"
        android:layout_width="225dp"
        android:layout_height="172dp"
        android:layout_below="@+id/textViewChooseLang"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pl"
        android:onClick="clickPlButton" />

    <Button
        android:layout_height="137dp"
        android:layout_marginTop="29dp"
        android:id="@+id/buttonGB"
        android:layout_width="225dp"
        android:layout_below="@+id/buttonPL"
        android:layout_alignStart="@+id/buttonPL"
        android:background="@drawable/gb"
        android:onClick="clickEnButton" />

</RelativeLayout>
