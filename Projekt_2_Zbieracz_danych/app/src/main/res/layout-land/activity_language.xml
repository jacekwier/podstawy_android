<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:text="@string/textView_chooseLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChooseLang"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonPL"
        android:layout_width="225dp"
        android:layout_height="172dp"
        android:background="@drawable/pl"
        android:onClick="clickPlButton"
        android:layout_marginStart="38dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        tools:visibility="visible" />

    <Button
        android:layout_height="137dp"
        android:id="@+id/buttonGB"
        android:layout_width="225dp"
        android:background="@drawable/gb"
        android:onClick="clickEnButton"
        android:visibility="visible"
        android:enabled="true"
        android:layout_centerInParent="false"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>